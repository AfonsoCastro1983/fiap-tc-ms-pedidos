								"schema": {
									"items": {
										"$ref": "#/components/schemas/IMensagemTransacao"
									},
									"type": "array"
								}
							}
						}
					}
				},
				"description": "Atualização pela mensageria",
				"tags": [
					"Pedido"
				],
				"security": [],
				"parameters": []
			}
		}
	},
